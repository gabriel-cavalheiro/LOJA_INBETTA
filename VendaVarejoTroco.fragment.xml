<core:FragmentDefinition xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" xmlns="sap.m">
<Dialog contentWidth="640px" contentHeight="240px" title="Confirmação de troco" type="Standard">
<content>
<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanM="5">
<f:content>
<Label text="Valor Venda"/>
<Text text="{ parts: [{path: 'NovaVenda>/valorTotal'}, {path: 'NovaVenda>/moeda'}] , type:'sap.ui.model.type.Currency' }"/>
<Label text="Total Pago"/>
<Text text="{ parts: [{path: 'NovaVenda>/valorTotalPago'}, {path: 'NovaVenda>/moeda'}] , type:'sap.ui.model.type.Currency' }"/>
<Label text="Troco" design="Bold"/>
<Text text="{ parts: [{path: 'NovaVenda>/valorTroco'}, {path: 'NovaVenda>/moeda'}] , type:'sap.ui.model.type.Currency' }"/>
</f:content>
</f:SimpleForm>
</content>
<buttons>
<Button text="Alterar formas de pagamento" type="Transparent" press="closeDescontoDialog"/>
<Button text="Confirma entrega do troco" type="Accept" press="confirmaDescontoDialog"/>
</buttons>
</Dialog>
</core:FragmentDefinition>
