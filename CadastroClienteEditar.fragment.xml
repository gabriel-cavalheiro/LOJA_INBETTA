<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns="sap.m">
<Dialog contentWidth="1024px" title="Cadastro de clientes - Atualizar {NovaVenda>/sClientes/nome}" type="Standard">
<content>
<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" columnsL="3" columnsM="2">
<f:content>
<core:Title text="Contato"/>
<Label required="true" text="Nome"/>
<Input value="{NovaVenda>/sClientes/nome}"/>
<Label required="true" text="Telefone"/>
<Input value="{NovaVenda>/sClientes/telefone}"/>
<Label text="Celular"/>
<Input value="{NovaVenda>/sClientes/celular}"/>
<Label text="Fax"/>
<Input value="{NovaVenda>/sClientes/fax}"/>
<Label required="true" text="E-mail"/>
<Input value="{NovaVenda>/sClientes/email}"/>
<Label text="CPF" visible="{NovaVenda>/sClientes/pessoaFisica}"/>
<Text text="{NovaVenda>/sClientes/cpf}" visible="{NovaVenda>/sClientes/pessoaFisica}"/>
<Label text="CNPJ" visible="{NovaVenda>/sClientes/pessoaJuridica}"/>
<Text text="{NovaVenda>/sClientes/cnpj}" visible="{NovaVenda>/sClientes/pessoaJuridica}"/>
<Label text="Inscrição Estadual" visible="{NovaVenda>/sClientes/pessoaJuridica}"/>
<MaskInput visible="{NovaVenda>/sClientes/pessoaJuridica}" value="{NovaVenda>/sClientes/inscricaoEstadual}" mask="999999999999999999" placeholderSymbol="_" placeholder="Digite a Inscrição Estadual (apenas números)"/>
<core:Title text="Endereço"/>
<Label required="true" text="Código Postal"/>
<l:HorizontalLayout>
<MaskInput value="{NovaVenda>/sClientes/codigoPostal}" mask="99999-999" placeholderSymbol="_" placeholder="Digite o CEP (apenas números)" change="onCadastroClienteEditarBuscaCep"/>
<Button icon="sap-icon://search" press="onCadastroClienteEditarBuscaCep"/>
</l:HorizontalLayout>
<Label required="true" text="Logradouro"/>
<Input value="{NovaVenda>/sClientes/logradouro}"/>
<Label required="true" text="Número"/>
<Input value="{NovaVenda>/sClientes/numero}"/>
<Label text="Complemento"/>
<Input value="{NovaVenda>/sClientes/complemento}"/>
<Label required="true" text="Bairro"/>
<Input value="{NovaVenda>/sClientes/bairro}"/>
<Label required="true" text="Cidade"/>
<Input value="{NovaVenda>/sClientes/cidade}"/>
<Label required="true" text="País"/>
<Select selectedKey="{NovaVenda>/sClientes/pais}" items="{InputHelpPaises>/}" change="onPaisSelected">
<core:Item key="{InputHelpPaises>id}" text="{InputHelpPaises>id} - {InputHelpPaises>denominacao}"/>
</Select>
<Label required="true" text="UF"/>
<Select selectedKey="{NovaVenda>/sClientes/uf}" items="{InputHelpRegioes>/}">
<core:Item key="{InputHelpRegioes>id}" text="{InputHelpRegioes>id} - {InputHelpRegioes>denominacao}"/>
</Select>
</f:content>
</f:SimpleForm>
</content>
<buttons>
<Button text="Cancelar" type="Transparent" press="onCadastroClienteEditarCancelar"/>
<Button text="Atualizar Cadastro" type="Accept" press="onCadastroClienteEditarAtualizar"/>
</buttons>
</Dialog>
</core:FragmentDefinition>
