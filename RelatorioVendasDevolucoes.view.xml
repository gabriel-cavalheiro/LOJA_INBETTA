				<f:title>
					<core:Title text="Resultado da busca" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" />
				</f:layout>
			</f:Form> -->
<!-- <ScrollContainer minWidth="1024px"> -->
<!-- <ScrollContainer> -->
<Table growing="true" growingThreshold="50" id="TableRelatorioVendasDevolucoes" growingScrollToLoad="false" noDataText="Nenhum registro encontrado" items="{VendasDevolucoes>/}">
<columns>
<Column width="4em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Número" design="Bold"/>
</Column>
<Column width="6em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Tipo doc." design="Bold"/>
</Column>
<Column width="14em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Vendedor" design="Bold"/>
</Column>
<Column width="14em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Cliente" design="Bold"/>
</Column>
<Column width="4em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Status" design="Bold"/>
</Column>
<Column width="6em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Tipo de documento" design="Bold"/>
</Column>
<Column width="4em" minScreenWidth="Tablet" demandPopin="true">
<Label text="Data Criação" design="Bold"/>
</Column>
<Column width="4em" hAlign="Right" minScreenWidth="Tablet" demandPopin="true">
<Label text="Valor Total" design="Bold"/>
</Column>
</columns>
<items>
<ColumnListItem type="Navigation" press="onPressVendasDevolucoesDetalhes">
<cells>
<Text text="{VendasDevolucoes>id}"/>
<Text text="{ path: 'VendasDevolucoes>devolucao', formatter: '.formatterIsDevolucao' }"/>
<!-- <Text text="{VendasDevolucoes>sVendedores/nome}" /> -->
<Text text="{VendasDevolucoes>nomeVendedores}"/>
<!-- <Text text="{VendasDevolucoes>sClientes/nome}" /> -->
<Text text="{VendasDevolucoes>nomeClientes}"/>
<!-- <Text text="{VendasDevolucoes>sStatusVenda/descricao}" /> -->
<Text text="{VendasDevolucoes>descStatus}"/>
<!-- <Text text="{VendasDevolucoes>sTiposVenda/descricao}" /> -->
<Text text="{VendasDevolucoes>descTiposVenda}"/>
<Text text="{VendasDevolucoes>dataCriacao}"/>
<Text text="{ parts: [{path: 'VendasDevolucoes>valorTotal'}, {path: 'VendasDevolucoes>moeda'}] , type:'sap.ui.model.type.Currency' }"/>
</cells>
</ColumnListItem>
</items>
</Table>
<!-- </ScrollContainer> -->
</content>
<footer>
<Toolbar>
<core:Fragment fragmentName="view.FooterStatus" type="XML"/>
<ToolbarSpacer/>
</Toolbar>
</footer>
</Page>
</mvc:View>
